
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all access.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Profile pictures can be read by any authenticated user.
    // They can only be written (created, updated, deleted) by the user who owns the profile.
    // We also enforce constraints on file size and type.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/(jpeg|png|heic|heif|webp)');
    }
  }
}
