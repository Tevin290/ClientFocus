rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures can be read by anyone authenticated.
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      // A user can only write (upload/update/delete) their own profile picture.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
