
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      let role = getUserRole();
      return role == 'admin' || role == 'super-admin';
    }

    function isCoach() {
      return getUserRole() == 'coach';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // ANYONE can create a user document (for signup)
      allow create: if true;

      // Users can be read if:
      // 1. You are the owner of the document
      // 2. You are an admin
      // 3. The document is for a coach (so clients/public can see them)
      // 4. You are a coach reading one of your assigned clients
      allow read: if isSignedIn() && (
                    isOwner(userId) ||
                    isAdmin() ||
                    resource.data.role == 'coach' ||
                    (isCoach() && resource.data.coachId == request.auth.uid)
                  );

      // Users can update their own document, or an admin can update any document
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Rules for the 'sessions' collection
    match /sessions/{sessionId} {
      // Only coaches can create sessions
      allow create: if isCoach(); 
      
      // A session can be read if:
      // 1. You are an admin
      // 2. You are the coach who logged it
      // 3. You are the client to whom it belongs
      allow read: if isSignedIn() && (
                    isAdmin() ||
                    resource.data.coachId == request.auth.uid ||
                    resource.data.clientId == request.auth.uid
                  );

      // A session can be updated if:
      // 1. You are an admin (for status changes)
      // 2. You are the coach who created it (for edits)
      allow update: if isSignedIn() && (
                      isAdmin() ||
                      (isCoach() && resource.data.coachId == request.auth.uid)
                    );
      
      allow delete: if isAdmin();
    }
  }
}
