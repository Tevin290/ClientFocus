rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // WARNING: TEMPORARY INSECURE RULES FOR DATA MIGRATION
    // These rules allow anyone to read and write to your entire database.
    // This is necessary for the one-time server-side migration script to run.
    // After the migration is complete, you MUST revert to the secure rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
